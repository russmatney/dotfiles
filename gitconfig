[user]
    name = Russell Matney
    email = russell.matney@gmail.com
[push]
    default = simple
[merge]
    tool = vimdiff
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'Splice Init'"
    trustExitCode = true
[color]
    ui = auto
[core]
    editor = vim
[alias]
    amnesia = !sh -c 'git update-index --assume-unchanged $0'
    recall = !sh -c 'git update-index --no-assume-unchanged $0'
    forgetfulness = !sh -c 'git ls-files -v | grep ^[a-z]'
